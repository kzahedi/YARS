  <logging>
    <actuator target="muscle" precision="3">
      <desired/>
      <internal/>
      <appliedForce/>
      <appliedVelocity/>
      <external/>
    </actuator>

    <console>
      <target name="muscle"/>
    </console>
    <csv name="muscle" date="false">
      <target name="muscle"/>
    </csv>
  </logging>

</rosiml>

<rosiml version="0.8.41">

  <simulator frequency="1000">
    <solver  iterations="100"/>
  </simulator>

  <screens>

    <screen name="Braiternberg" show="true" follow="false">
      <size   width="600" height="600"/>
      <camera>
        <position x="3.00" y="0.00" z="2.0"/>
        <lookAt x="0.0" y="0.00" z="1.0"/>
      </camera>
      <osd>
        <time  font="Time"  size="25" colour="FFFF00"/>
        <robot font="Robot" size="25" colour="FFFFFF"/>
      </osd>
    </screen>

    <sky name="YARS/CloudySky"/>

    <cameras>
      <orbit speed="0.5">
        <lookAtX p="0.05" i="0.001"  d="0.002"/>
        <lookAtY p="0.05" i="0.001"  d="0.002"/>
        <lookAtZ p="1.0"  i="0.0"    d="0.0"/>
        <fromX   p="0.01" i="0.0001" d="0.0002"/>
        <fromY   p="0.01" i="0.0001" d="0.0002"/>
        <fromZ   p="0.0"  i="0.0"    d="0.0"/>
      </orbit>
      <centre speed="1.5"/>
    </cameras>

    <followables>
      <followable name="swinging body"/>
    </followables>
    <visualise>
      <joints height="0.5" radius="0.01"/>
    </visualise>
  </screens>

  <environment>
    <!-- <gravitation x="0.0" y="0.0" z="-9.81"/> -->
    <ground fixed="true" fog="false">
      <visualisation>
        <texture name="YARS/DryGroundSmall"/>
      </visualisation>
    </ground>
  </environment>

  <robots>

    <robot name="Muscle 1">
      <body>
        <sphere name="source body 1" visualise="true">
          <dimension radius="0.10"/>
          <pose z="2.00" y="0.0"/>
          <visualisation>
            <texture name="Chain/Circuit/Top/Green"/>
          </visualisation>
          <physics>
            <mass kg="0.0"/>
          </physics>
        </sphere>
        <sphere name="destination body 1" visualise="true">
          <dimension radius="0.10"/>
          <pose x="0.5" y="0.5" z="1.5"/>
          <visualisation>
            <texture name="Chain/Circuit/Top/Green"/>
          </visualisation>
          <physics>
            <mass kg="0.1"/>
          </physics>
        </sphere>
      </body>
      <actuators>
      <!--
      standard values from the 2015 paper
      -->
        <muscle name="muscle 1" visualise="true" friction="0.0001" cfm="0.1" erp="1.0">
          <source name="source body 1"/>
          <destination name="destination body 1"/>
          <srcAnchor>
            <sphere name="source anchor 1" visualise="true">
              <dimension radius="0.05"/>
              <pose x="0.0" y="0.0" z="-0.1"/>
              <visualisation>
                <texture name="Chain/Circuit/Top/Yellow"/>
              </visualisation>
              <physics>
                <mass kg="0.01"/>
              </physics>
            </sphere>
          </srcAnchor>
          <dstAnchor>
            <sphere name="destination anchor 1" visualise="true">
              <dimension radius="0.05"/>
              <pose x="0.0" y="0.0" z="0.1"/>
              <visualisation>
                <texture name="Chain/Circuit/Top/Blue"/>
              </visualisation>
              <physics>
                <mass kg="0.01"/>
              </physics>
            </sphere>
          </dstAnchor>
          <force       max="20.0"/>
          <velocity    max="10.5"/>
          <deflection  min="-0.5" max="0.5"/>
          <mapping     min="-1" max="+1"/>
          <lengthComponent   optimalLength="1.0" w="0.9" c="5.0" use="true"/>
          <velocityComponent maxVelocity="3.0"   N="1.5"  K="1.5"  use="true"/>
        </muscle>
      </actuators>
      <sensors>
      </sensors>

      <controller  module="Sine" frequency="10">
        <parameter name="base line" value="0.5"/>
        <parameter name="amplitude" value="0.5"/>
        <!-- <parameter name="debug" value="true"/> -->
      </controller>
    </robot>

  </robots>

